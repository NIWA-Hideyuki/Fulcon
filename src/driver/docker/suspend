#!/bin/bash

# Copyright (C) 2015 NIWA Hideyuki

LIBDIR="/var/lib/fulcon/"

usage()
{
	echo "usage: suspend NAME"
}

if [ $# -eq 1 ]; then
	NAME=$1
else
	usage
	exit -1
fi

STAT=`fulcon list | awk '($1=="'$NAME'"){print $2}'`
if [ x"$STAT" != x"RUNNING" ]; then
	echo "error: not RUNNING" 
	exit -1
fi

docker pause $NAME

exit 0
