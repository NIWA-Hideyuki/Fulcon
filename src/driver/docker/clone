#!/bin/bash

# Copyright (C) 2015 NIWA Hideyuki

LIBDIR="/var/lib/fulcon/"

usage()
{
	echo "usage: clone CONTAINER_NAME NEW_IMAGENAME "
}

if [ $# -ne 2 ]; then
	usage
	exit -1
fi

CONTAINER=$1
IMAGENAME=`basename $2`

echo $1 $2
#docker commit $CONTNAME fulcon/$IMAGENAME

if [ $? -eq 0 ]; then
	echo "cloned new image:" $IMAGENAME
else
	echo "error: clone is failed"
	exit -1
fi

exit 0


