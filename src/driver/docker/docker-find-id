#!/bin/bash

# Copyright (C) 2015 NIWA Hideyuki

CPUDIR="/sys/fs/cgroup/cpu/system.slice"
if [ -x $CPUDIR/docker.service/docker ]; then
	CPUDIR=$CPUDIR/docker.service/docker
	CPUSUFFIX=""
else
	CPUSUFFIX="docker-"
fi

# check args
if [ $# -ne 1 ]; then
	echo "usage: find-id CONTAINER_NAME"
	exit -1
fi

# get cgroup.procs path
ARG1=$1
CNAME=`docker ps | awk 'NR>1{n=split($0,a);print a[n],a[1]}' | grep -w "$ARG1" | awk '{print $2}'`
if [ x"$CNAME" == x"" ]; then
	echo "error: can't find container:" $1
	exit -1
fi

CPATH=`ls -1 $CPUDIR/${CPUSUFFIX}${CNAME}*/cgroup.procs`
if [ $? -ne 0 ]; then
	echo "error: can't find container:" $CNAME
	exit -1
fi

echo $CNAME

exit 0
